<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.beercounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/khand"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/large_font" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/name_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:imeActionLabel="Done"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:hint="@string/name"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/small_font" />

                <TextView
                    android:id="@+id/person_1_volume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/regular_font" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/small_first"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"
                        android:layout_marginRight="@dimen/small_horizontal_margin"
                        android:scaleType="centerInside"
                        android:padding="@dimen/button_padding_small_icon"
                        android:background="@drawable/mybutton"
                        android:src="@drawable/beer_icon" />

                    <ImageButton
                        android:id="@+id/regular_first"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"
                        android:layout_marginLeft="@dimen/small_horizontal_margin"
                        android:scaleType="centerInside"
                        android:padding="@dimen/button_padding_normal_icon"
                        android:background="@drawable/mybutton"
                        android:src="@drawable/beer_icon" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/name_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:imeActionLabel="Done"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:hint="@string/name"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/small_font" />

                <TextView
                    android:id="@+id/person_2_volume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/regular_font" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/small_second"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"
                        android:layout_marginRight="@dimen/small_horizontal_margin"
                        android:scaleType="centerInside"
                        android:padding="@dimen/button_padding_small_icon"
                        android:background="@drawable/mybutton"
                        android:src="@drawable/beer_icon" />

                    <ImageButton
                        android:id="@+id/regular_second"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"
                        android:layout_marginLeft="@dimen/small_horizontal_margin"
                        android:scaleType="centerInside"
                        android:padding="@dimen/button_padding_normal_icon"
                        android:background="@drawable/mybutton"
                        android:src="@drawable/beer_icon" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/name_third"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:imeActionLabel="Done"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:hint="@string/name"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/small_font" />

                <TextView
                    android:id="@+id/person_3_volume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/regular_font" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/small_third"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"
                        android:layout_marginRight="@dimen/small_horizontal_margin"
                        android:scaleType="centerInside"
                        android:padding="@dimen/button_padding_small_icon"
                        android:background="@drawable/mybutton"
                        android:src="@drawable/beer_icon" />

                    <ImageButton
                        android:id="@+id/regular_third"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"
                        android:layout_marginLeft="@dimen/small_horizontal_margin"
                        android:scaleType="centerInside"
                        android:padding="@dimen/button_padding_normal_icon"
                        android:background="@drawable/mybutton"
                        android:src="@drawable/beer_icon" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/name_forth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:imeActionLabel="Done"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:hint="@string/name"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/small_font" />

                <TextView
                    android:id="@+id/person_4_volume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/regular_font" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/small_fourth"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"
                        android:layout_marginRight="@dimen/small_horizontal_margin"
                        android:scaleType="centerInside"
                        android:padding="@dimen/button_padding_small_icon"
                        android:background="@drawable/mybutton"
                        android:src="@drawable/beer_icon" />

                    <ImageButton
                        android:id="@+id/regular_fourth"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"
                        android:layout_marginLeft="@dimen/small_horizontal_margin"
                        android:scaleType="centerInside"
                        android:padding="@dimen/button_padding_normal_icon"
                        android:background="@drawable/mybutton"
                        android:src="@drawable/beer_icon" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/button_bottom_margin">

        <Button
            android:id="@+id/btn_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/mybutton"
            android:onClick="undo"
            android:text="@string/undo"
            android:textSize="@dimen/button_text" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/button_site_margin"
            android:background="@drawable/mybutton"
            android:onClick="reset"
            android:text="@string/reset"
            android:textSize="@dimen/button_text" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/button_site_margin"
            android:background="@drawable/mybutton"
            android:onClick="sendOnEmail"
            android:text="@string/send"
            android:textSize="@dimen/button_text" />
    </LinearLayout>

</RelativeLayout>